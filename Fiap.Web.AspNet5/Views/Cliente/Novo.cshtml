@model ClienteModel

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Cadastro</h2>

                @if (!String.IsNullOrEmpty(ViewBag.Mensagem))
                {
                    <div class=" alert alert-warning" role="alert">@ViewBag.Mensagem</div>
                }

                <form asp-controller="Cliente" asp-action="Novo" method="post">
                    <div class="form-group">
                        <label class="control-label">Nome</label>
                        <input class="form-control col-5" name="Nome" value="@Model.Nome" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Sobrenome</label>
                        <input class="form-control col-5" name="Sobrenome" value="@Model.Sobrenome" required />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input class="form-control col-5" name="Email" value="@Model.Email" required />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Data Nascimento</label>
                        <input type="date" class="form-control col-5" name="DataNascimento" value="@Model.DataNascimento" required />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Observação</label>
                        <textarea class="form-control" name="Observacao">@Model.Observacao</textarea>
                    </div>

                    <a class="btn btn-default btn-lg" asp-controller="Cliente" asp-action="Index">Cancelar</a>
                    <button type="submit" class="btn btn-primary btn-lg">Gravar</button>
                </form>
            </div>
        </div>
    </div>
</div>